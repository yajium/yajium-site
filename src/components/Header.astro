---
import { Image } from "@astrojs/image/components";
import { rorisuAlt } from "src/constants/constant";
import rorisu from "../images/ui/rorisu.png";

type Props = {
  iconHeadline?: string;
  desc?: string;
  isHome?: boolean;
};
const { iconHeadline, desc, isHome } = Astro.props;
---

<header>
  <div class="icon-header">
    <Image src={rorisu} width={100} height={100} alt={rorisuAlt} />
    {iconHeadline && <h2>{iconHeadline}</h2>}
    {!isHome && desc && <p>{desc}</p>}
  </div>
</header>

<style>
  header {
    @apply px-6 py-4 lg:hidden mt-8;
  }
  .icon-header {
    @apply grid justify-items-center;
  }
  .icon-header h2 {
    color: #e5dcdc;
    @apply font-medium text-lg sm:text-2xl text-center mt-3 sm:mt-6 mb-3;
  }
  .icon-header p {
    @apply text-sm;
    color: #b0a6a6;
  }
</style>
