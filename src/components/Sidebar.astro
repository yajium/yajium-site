---
import { Image } from "@astrojs/image/components";
import { rorisuAlt } from "src/constants/constant";
import namu from "../images/ui/namu.png";

type Props = {
  iconHeadline?: string;
  desc?: string;
};
const { iconHeadline, desc } = Astro.props;
---

<div class="side-bar">
  <div class="icon-head">
    <Image src={namu} width={140} height={120} alt={rorisuAlt} />
    {iconHeadline && <h2>{iconHeadline}</h2>}
  </div>
  {
    desc && (
      <div class="my-desc">
        <p>{desc}</p>
      </div>
    )
  }
</div>

<style>
  .side-bar {
    @apply px-6 py-4 mt-4 mx-6 hidden lg:block lg:basis-1/4 sticky top-0;
  }
  .icon-head {
    @apply grid justify-items-center;
  }
  .icon-head h2 {
    @apply font-medium text-xl mt-6 text-navy;
  }
  .my-desc {
    @apply hidden mt-14 md:block text-center;
  }

  .my-desc p {
    @apply text-sm whitespace-pre-line text-navy;
  }
</style>
